generator client {
  provider = "prisma-client-js"
  // Removed custom output path to fix deployment on platforms like Render
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String
  signupDate   DateTime      @default(now())
  lifetimeFree Boolean       @default(false)

  studyRooms   StudyRoom[]   @relation("CreatedRooms")
  messages     Message[]
  participants Participant[]
}

model StudyRoom {
  id              String        @id @default(uuid())
  name            String
  subject         String
  maxParticipants Int
  isPrivate       Boolean       @default(false)
  createdById     String
  createdAt       DateTime      @default(now())

  createdBy       User          @relation("CreatedRooms", fields: [createdById], references: [id])
  participants    Participant[]
  messages        Message[]
}

model Message {
  id        String    @id @default(uuid())
  content   String
  createdAt DateTime  @default(now())

  roomId    String
  userId    String

  StudyRoom StudyRoom @relation(fields: [roomId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}

model Participant {
  id        String     @id @default(uuid())
  userId    String
  roomId    String

  user      User       @relation(fields: [userId], references: [id])
  room      StudyRoom  @relation(fields: [roomId], references: [id])

  joinedAt  DateTime   @default(now())

  @@unique([userId, roomId]) // Prevent same user joining the same room multiple times
}
